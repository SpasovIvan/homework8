<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.spasov.homework8"/>

    <bean id="enDayOfWeek" class="com.spasov.homework8.entity.EnDayOfWeek"/>
    <bean id="deDayOfWeek" class="com.spasov.homework8.entity.DeDayOfWeek"/>
    <bean id="itDayOfWeek" class="com.spasov.homework8.entity.ItDayOfWeek"/>
    <bean id="currentDayOfWeekService" class="com.spasov.homework8.service.CurrentDayOfWeekService">
        <constructor-arg ref="itDayOfWeek"/>
    </bean>

</beans>